<style>
    body {
        background-color: rgb(65, 65, 65);
    }
    
    h1 {
        color: white;
    }
    
    h2 {
        color: white;
    }
    
    label {
        color: white;
    }
    p{
        color: white;
    }
</style>

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Class 3</title>
</head>
<body>
    <h1>Welcome to Class 3's discussion page!</h1>
    <h2>Feel free to ask any questions about the class here:</h2>
    <form method="POST" action="/class3">
        <label for="question">Ask a question:</label>
        <br></br>
        <textarea type="text" id="question" name="question" rows="5" cols="45"></textarea>
        <br></br>
        <button type="submit">Submit</button>
    </form>
    
<% if (questions && questions.length > 0) { %>
        <h2>Previously Asked Questions:</h2>
        <% questions.forEach(function(question) { %>
            <p><%= question.question %> - asked by <%= firstName && lastName ? firstName + ' ' + lastName : 'anonymous' %></p>
        <% }) %>
    <% } %>

</body>
</html> 
