<style>
    body{
        background-color: rgb(65, 65, 65);
    }
    h1{
        color: white;
    }
    h2{
        color: white;
    }
    p{
        color: white;
    }
    label{
        color: white;
    }
</style>

<!DOCTYPE html>
<html lang="en">
<head>
    <title>General Discussion</title>
</head>
<body>
    <h1>General Discussion Board</h1>

    <form method="POST" action="/discussion-page">
        <label for="question">Ask a question:</label>
        <textarea type="text" id="question" name="question"></textarea>
        <button type="submit">Submit</button>
    </form>

    <% if (questions && questions.length > 0) { %>
        <h2>Previously Asked Questions:</h2>
        <% questions.forEach(function(question) { %>
            <p><%= question.question %> - asked by <%= firstName && lastName ? firstName + ' ' + lastName : 'anonymous' %></p>
        <% }) %>
    <% } %>
    
</body>
</html>
